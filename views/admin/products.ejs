  <style>
    /* Style for the control panel section */
    .control-panel {
      position: relative; /* Fixed position to keep it in place */
      top: 0; /* Position it at the top of the page */
      left:0; /* Position it on the left side of the page */
      height: 100%; /* Make it the full height of the page */
      width: 200px; /* Set a fixed width for the section */
      background-color: #f0f0f0; /* Set a background color */
    }
    @media only screen and (max-width: 768px) {
        .control-panel {
          position: relative; /* Change position to relative for responsive layout */
          width: 25%; /* Set width to 100% to take up full width of the screen */
        }
      }
  </style>

    <div class="row">
        <!-- <a href="/admin/logout"><button type="button" class="btn btn-danger">Log Out Admin</button></a>         -->
        <div class="d-flex">
            <div class="control-panel d-flex justify-content-center " style="height: 100vh; background-color: grey;">
              <!-- Your control panel content goes here -->
          
                 
          
                <div class="row mt-5">
                  <div class="">
                    <a class="text-decoration-none text-white"style="font-size: small"href="/admin/home">Home</a><br>
                    <a class="text-decoration-none text-white"style="font-size: small"href="/admin/userData">USER DATA</a><br>
                    <a class="text-decoration-none text-white"style="font-size: small"href="/admin/addProduct">ADD PRODUCT</a><br>
                    <a class="text-decoration-none text-white"style="font-size: small"href="/admin/products">PRODUCTS</a><br>
                    <a class="text-decoration-none text-white"style="font-size: small"href="">CATEGORY</a>
                  </div>
                </div>
             </div> 
            <div class="d-flex justify-content-center" style="width: 100%;">
              <div style="width: 100%;">
              <!-- The rest of your HTML content goes here -->
          
          
                <div class="bg-light col-12 p-5">
                  <div class="d-flex justify-content-end">
                      <form>
                          <input type="text" placeholder="search" name="search">
                          <input type="submit" value="Search">
                      </form>
                  </div>
                  <table id="myTable" class="table">
                      <thead>
                          <tr>
                              <th scope="col">Name</th>
                              <th scope="col">Brand</th>
                              <th scope="col">Price</th>
                              <th scope="col">Image</th>
                              <th scope="col-2">Actions</th>
                          </tr>
                      </thead>
                      <tbody>
                      <%
                      if(product.length>0){
                          for(let i=0;i<product.length;i++){
                           %>
                           <tr>
                              <td><%=product[i].title%></td>
                              <td><%=product[i].brand%></td>
                              <td><%=product[i].price%></td>
                              <td><img width="30px" height="35px" src="/proImage/<%=product[i].image[0]%>" alt=""></td>
                              <td><a href="/admin/editProduct?id=<%=product[i]._id%>"><button type="button" class="btn btn-primary">Edit</button></a>
                                  <a href="/admin/deleteProduct?id=<%=product[i]._id%>"><button type="button" class="btn btn-danger">Delete</button></a>
                             </td>
                          </tr>
                          <%
                            }
                      } else{
                          %>
                   <tr>
                       <td colspan="5">Users Not Found</td>
                   </tr>
              <% } %>
                      </tbody>
                  </table>
              </div>
             
          
              
            </div>
            </div>
          </div> 

    </div>
