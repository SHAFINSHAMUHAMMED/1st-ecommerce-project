<%- include('../layouts/header.ejs') %>
<div class="img js-fullheight vh-100" style="background-image:url(/img/back\ copy.jpg) ;" >
<section class="vh-100 bg">
  <div class="container-xl h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div>
          <div class="p-5 text-center">

            <h3 class="mb-5 text-white">User Login</h3>

        <form action="/login" method="post">
             <div class="form-outline mb-5">
              <input name="email" type="email" id="typeEmailX-2" class="form-control form-control-lg" placeholder="Email" />
              
            </div>

            <div class="form-outline mb-4">
              <input name="password" type="password" id="typePasswordX-2" class="form-control form-control-lg" placeholder="Password"/>
              <% if(typeof message!='undefined'||typeof msg!='undefined'){
                %>
                <small class="text-success"><%= message %></small>
                <small class="text-danger"><%= msg %></small>
                <%
             } 
                %>
            </div>
            
            <div class="d-grid gap-2 col-6 mx-auto mb-4">
                <button class="btn btn-dark" type="submit">Login</button>
            </div>

        </form>
       
          <div class="d-grid gap-2 col-6 mx-auto mb-4">
            <a href="/otp-login" role="button" class="btn btn-block btn-dark">OTP login</a>
            
          </div>
          <div class="d-grid gap-2 col-6 mx-auto mb-4">
            <a href="/signup" role="button" class="btn btn-block btn-dark">Signup</a>
            
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</div>

  
