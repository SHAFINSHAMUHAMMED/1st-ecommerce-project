                            <p>Copyright ©
                                <script>
                                    document.write(new Date().getFullYear());
                                </script>2020
                                All rights reserved | MaleFashions <i class="" aria-hidden="true"></i>
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </footer>


        <script>
            // Add event listener to form submit button
            document.querySelector('#checkout-form').addEventListener('submit', function (event) {
                // Get required fields
                var firstNameInput = document.querySelector('input[name="firstName"]');
                var addressInput = document.querySelector('textarea[name="address"]');
                var cityInput = document.querySelector('input[name="city"]');
                var stateInput = document.querySelector('input[name="state"]');
                var zipInput = document.querySelector('input[name="zip"]');
                var phoneInput = document.querySelector('input[name="phone"]');

                // Check if required fields have values
                if (!firstNameInput.value || !addressInput.value || !cityInput.value || !stateInput.value || !zipInput.value || !phoneInput.value) {
                    // Prevent form submission
                    event.preventDefault();

                    // Display error message
                    alert('Please fill out all required fields.');
                }
            });
        </script>


