        <!-- Checkout Section Begin -->
        <section class="checkout spad d-flex">
            <div class="container">
                <div class="checkout__form">

                    <div class="row">

                        <div class="col-lg-8 col-md-6 ">



                            <div class="d-flex justify-content-end">
                                <a href="/address">
                                    <button type="submit">Select Address</button>
                                </a>

                            </div>
                            <h6 class="checkout__title">Billing Details</h6>
                            <form action="paymentPage">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>First Name<span>*</span></p>
                                                <input type="text" name="firstName" placeholder="Name" required
                                                    minlength="2" />
                                                <span class="error-message"></span>
                                                <% } else { %>
                                                    <p>First Name<span>*</span></p>
                                                    <input type="text" name="firstName"
                                                        value="<%=addressCount.username%>" required minlength="2" />
                                                    <span class="error-message"></span>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="checkout__input">

                                    <p>Country<span>*</span></p>
                                    <input type="text" value="INDIA" readonly>

                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>Address<span>*</span></p>
                                        <textarea name="address" id="inputOrgName" cols="30" rows="5"
                                            class="form-control" placeholder="Enter your address"
                                            required>Address </textarea>
                                        <% } else { %>
                                            <p>Address<span>*</span></p>
                                            <textarea name="address" id="inputOrgName" cols="30" rows="5"
                                                class="form-control" required><%= addressCount.address %></textarea>

                                            <% } %>
                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>Town/City<span>*</span></p>
                                        <input type="text" placeholder="Town/City" required>
                                        <% } else { %>
                                            <p>Town/City<span>*</span></p>
                                            <input type="text" value="<%=addressCount.city%>" required>
                                            <% } %>
                                </div>
                                <div class="checkout__input">
                                    <% if (addressCount==undefined) { %>
                                        <p>State<span>*</span></p>
                                        <input type="text" placeholder="State" required>
                                        <% } else { %>
                                            <p>State<span>*</span></p>
                                            <input type="text" value="<%=addressCount.state%>" required>
                                            <% } %>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>Postcode / ZIP<span>*</span></p>
                                                <input type="text" placeholder="Postcode / ZIP" required>
                                                <% } else { %>
                                                    <p>Postcode / ZIP<span>*</span></p>
                                                    <input type="text" value="<%=addressCount.zip%>" required>
                                                    <% } %>
                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <% if (addressCount==undefined) { %>
                                                <p>Phone<span>*</span></p>
                                                <input type="text" placeholder="Alt Phone Number" required>
                                                <% } else { %>
                                                    <p>Phone<span>*</span></p>
                                                    <input type="text" value="<%=addressCount.phone%>" required>
                                                    <% } %>
                                        </div>
                                    </div>

                                </div>

                        </div>
                        <div class="col-lg-4 col-md-6">
                            <div class="checkout__order">
                                <h4 class="order__title">Your order</h4>
                                <div class="checkout__order__products">Product <span>Total</span></div>
                                <% if (cart.item==undefined) { %>
                                    <% } else { %>
                                        <% let totalPrice=0 %>
                                            <%cart.item.forEach((item)=>{%>

                                                <ul class="checkout__total__products">
                                                    <li><img width="30px" height="30px"
                                                            src="/proImage/<%=item.product.image[0]%>" alt="">
                                                        <%=item.product.title%> <span>
                                                                <%=item.price * item.quantity%>
                                                            </span>
                                                    </li>
                                                </ul>
                                                <%})%>

                                                    <ul class="checkout__total__all">
                                                        <li class="text-success">Discount <span class="text-success">
                                                           - <%=cart.discount%>
                                                        </span></li>
                                                        <li>Total <span class="fs-5">
                                                                <%=cart.subtotal%>
                                                            </span></li>
                                                    </ul>
                                                    <% } %>
                                                        <a href="/paymentPage">
                                                            <form action="SaveAddress" method="post">
                                                            <button type="submit" class="site-btn">PROCEED TO
                                                                PAYMENTS</button></form> </a>

                            </div>
                        </div>
                    </div>
                    </form>
                </div>
            </div>
        </section>

